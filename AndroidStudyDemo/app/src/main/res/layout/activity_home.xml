<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".common.activity.HomeActivity">

    <FrameLayout
        android:id="@+id/fl_home_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingTop="4dp"
        android:background="#F5F2F2">

        <FrameLayout
            android:id="@+id/fl_nav_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_nav_1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/nav_32" />

                <TextView
                    android:id="@+id/tv_nav_1"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/nav_select"
                    android:layout_height="wrap_content"
                    android:text="首页" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvp_nav_1"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/bg_bottom_tips_shape"
                android:text="32"
                android:textColor="#ffffff"
                android:textSize="10sp" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_nav_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_nav_2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/nav_21" />

                <TextView
                    android:id="@+id/tv_nav_2"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvp_nav_2"
                android:visibility="gone"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/bg_bottom_tips_shape"
                android:text="32"
                android:textColor="#ffffff"
                android:textSize="10sp" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_nav_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_nav_3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/nav_11" />

                <TextView
                    android:id="@+id/tv_nav_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="收藏" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvp_nav_3"
                android:visibility="gone"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/bg_bottom_tips_shape"
                android:text="32"
                android:textColor="#ffffff"
                android:textSize="10sp" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_nav_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_nav_4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/nav_41" />

                <TextView
                    android:id="@+id/tv_nav_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="我的" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvp_nav_4"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/bg_bottom_tips_shape"
                android:text="32"
                android:textColor="#ffffff"
                android:textSize="10sp" />


        </FrameLayout>


    </LinearLayout>


</LinearLayout>